<%= render "shared/header" %>
<div class="search-box">
    <% if @id == '2' %>
    <button id="myBtn" class='btn btn-primary'>Create new Subject</button>
    <% end %>
    <form action="" class="nav-end">
        <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
