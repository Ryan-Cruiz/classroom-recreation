    <h3><a href="/subjects/<%= s.subject_id %>"><%= Subject.find(s.subject_id).title%></a></h3>
    <p><%= Subject.find(s.subject_id).section %></p>
</div>
<% else %>
<div class="item-box">
    <h3><a href="/subjects/1">Title</a></h3>
